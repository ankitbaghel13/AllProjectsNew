package strings;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class GroupAnagrams {

	public static void main(String[] args) {
		String[] strArray = new String[] {"yo","act","flop","tac","cat","oy","olfp"};
		List<List<String>> result = groupAnagrams(strArray);
		System.out.println(result);
	}

	private static List<List<String>> groupAnagrams(String[] strArray) {
		
		int length = strArray.length;
		String[] sortedArray = new String[length];
		Map<String, List<String>> mapAnagram = new HashMap<>();
		
		for(int i=0;i<strArray.length;i++) {
			sortedArray[i] = sortString(strArray[i]);
		}
		//{"yo","act","flop","tac","cat","oy","olfp"} - inputArray
		//{"oy","act","flop","act","act","oy","flop"} - sortedArray
		
		for(int i=0;i<length;i++) {
			if(!mapAnagram.containsKey(sortedArray[i])) {
					List<String> list = new ArrayList<>();
					list.add(strArray[i]);
					mapAnagram.put(sortedArray[i], list);
			}
		}
		
		Arrays.sort(strArray);
		for(String str : strArray)
			System.out.print(str+" ");
		return null;
	}
	
	public static String sortString(String inputString) { 
        char tempArray[] = inputString.toCharArray(); 
        Arrays.sort(tempArray); 
        return new String(tempArray); 
    } 

}
